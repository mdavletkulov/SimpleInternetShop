@model dynamic
@{
    ViewBag.Title = "Все товары";
}
<table class="table table-dark table-striped table-hover">

    <thead>
        <tr>
            <th scope="col" style="width: 25%">Название</th>
            <th scope="col" style="width: 15%">Цена</th>
            <th scope="col" style="width: 15%">Кол-во</th>
            <th scope="col" style="width: 15%"></th>
            <th scope="col" style="width: 15%"></th>
            <th scope="col" style="width: 15%"></th>
        </tr>
    </thead>
            @foreach (var item in Model.Products)
            {
<tr>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>@item.Count</td>
    <td>
        <a class="btn btn-primary" role="button" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a> 
    </td>
    <td>
        <a class="btn btn-primary" role="button" asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> 
    </td>
    <td>
        <a class="btn btn-primary" role="button" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a>
    </td>
</tr>
        }
    </table>
<div class="container">
    <a class="btn btn-primary px-6" role="button" asp-action="Create">Добавить товар</a>
</div>